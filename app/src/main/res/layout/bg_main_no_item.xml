<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/bmni_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快去收藏你感兴趣的内容吧~"
        android:textColor="@color/black"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/bmni_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击"
        android:layout_marginTop="@dimen/dimen_16"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/bmni_tv1"
        app:layout_constraintStart_toStartOf="@id/bmni_tv1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/bmni_im1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_about_colorful"
        android:contentDescription="@string/img_content_desc"
        app:layout_constraintStart_toEndOf="@id/bmni_tv2"
        app:layout_constraintTop_toTopOf="@id/bmni_tv2"
        android:layout_marginStart="@dimen/dimen_8"
        app:layout_constraintBottom_toBottomOf="@id/bmni_tv2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看收藏小技巧"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/bmni_tv2"
        app:layout_constraintBottom_toBottomOf="@id/bmni_tv2"
        app:layout_constraintStart_toEndOf="@id/bmni_im1"
        app:layout_constraintEnd_toEndOf="@id/bmni_tv1"/>

</android.support.constraint.ConstraintLayout>